      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Calculadora IRPF" id="calcirpf.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Opciones" id="calcirpf.menu_1" parent="calcirpf.menu_root"/>
   
    <menuitem name="Responsable" id="calcirpf.menu_1_1" parent="calcirpf.menu_1"/>
    <menuitem name="Calculadora Irpf" id="calcirpf.menu_1_2" parent="calcirpf.menu_1"/>
    <menuitem name="Etiqueta" id="calcirpf.menu_1_3" parent="calcirpf.menu_1"/>
    

    <menuitem name="Responsables" id="calcirpf.menu_1_list" parent="calcirpf.menu_1_1"
              action="calcirpf.action_window"/>
    <menuitem name="Calculadora" id="calcirpf.menu_2_list" parent="calcirpf.menu_1_2"
              action="calcirpf.action_window_calc"/>

    <menuitem name="Calculadora" id="calcirpf.menu_3_list" parent="calcirpf.menu_1_3"
              action="calcirpf.action_window_etiqueta"/>
    

  </data>
</odoo>
