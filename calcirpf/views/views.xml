<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- VISTAS TREE -->
    <record model="ir.ui.view" id="calcirpf.responsables_list">
      <field name="name">Responsables</field>
      <field name="model">calcirpf.responsable</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellido1"/>
          <field name="apellido2"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="calcirpf.calcula_list">
      <field name="name">Responsables</field>
      <field name="model">calcirpf.calculo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellidos"/>
          <field name="situacionActual"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="calcirpf.calcula_list_etiqueta">
      <field name="name">Etiqueta</field>
      <field name="model">calcirpf.etiqueta</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>

    <!--FORMULARIOS-->
    <record model="ir.ui.view" id="clientes_form_view">
    <field name="name">Responsable</field>
    <field name="model">calcirpf.responsable</field>
    <field name="arch" type="xml">
        <form string="Cliente">
            <sheet>
                <group>
                    <field name="nombre"/>
                    <field name="apellido1"/>
                    <field name="apellido2"/>
                    <field name="nombreCompleto"/>
                    <field name="fecha_nacimiento"/>
                    <field name="edad"/>
                    
                </group>
            </sheet>
        </form>
    </field>
    </record>

    <record model="ir.ui.view" id="clientes_form_view_calc">
    <field name="name">Calculadora</field>
    <field name="model">calcirpf.calculo</field>
    <field name="arch" type="xml">
        <form string="Calculadora">
            <sheet>
                <group>
                    <field name="nombre"/>
                    <field name="apellidos"/>
                    <field name="salarioBruto"/>
                    <field name="edad"/>
                    <field name="situacionActual"/>
                    <field name="numeroPagas"/>
                    <field name="irpf"/>
                    <field name="salario_mensual"/>
                    <field name="hijos"/>
                    <field name="pagas_extra"/>
                    <field name="responsable_id"/>
                    <field name="etiquetas"/>
                </group>
            </sheet>
        </form>
    </field>
    </record>

    
    <!-- ACTIONS -->

    <record model="ir.actions.act_window" id="calcirpf.action_window">
      <field name="name">Responsables</field>
      <field name="res_model">calcirpf.responsable</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="calcirpf.action_window_calc">
      <field name="name">Calculadora</field>
      <field name="res_model">calcirpf.calculo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="calcirpf.action_window_etiqueta">
      <field name="name">Etiqueta</field>
      <field name="res_model">calcirpf.etiqueta</field>
      <field name="view_mode">tree,form</field>
    </record>

    


    <!-- server action to the one above -->
